@{
	ViewData["Title"] = "Home Page";
}

<head>
	<script src="https://unpkg.com/scrollreveal"></script>
</head>

<section id="Landing">
	<div class="container-fluid card home-card text-center vh-100" style="width:100%">
		
		<img src="images/FlyKainin.png" class="card-img featured-img align-self-center pb-5 " style="z-index: -1" />
		<div class="text-center card-body">
				<h1>"Infinite, Pt. 1" Coming Soon!</h1>
		</div>
	</div>
</section>

<section id="FeaturedVideo">
	<div class="container-fluid vh-100" style="width:100%" id="FeaturedVideo">
		<video muted autoplay loop>
			<source src="movie.mp4" type="video/mp4">
		</video>
	</div>
</section>

<section id="EvoCondominium">
	<div class="card mx-auto" style="width: 350px">
		<img class="card-img" src="~/images/EvoConn.jpg" alt="Card image">
		<div class="card-img-overlay">
			<div class="card-body"> The Evolution Condominium  </div>
		</div>
	</div>
</section>


<script>
    window.sr = ScrollReveal();

	sr.reveal('.navbar', {
		duration: 2000,
		origin: 'bottom'
	});

	sr.reveal('div#FeaturedVideo', {
		duration: 2000,
		origin: 'bottom',
		distance: '300px',
		viewFactor: 0.2
	})
</script>